<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
    <ImageButton
        android:id="@+id/up_action"
        android:layout_width="80dp"
        android:layout_height="50dp"
        android:layout_above="@+id/layout_joystick"
        android:layout_centerHorizontal="true"
        android:src="@drawable/up"
        />
    <ImageButton
        android:id="@+id/right_action"
        android:layout_width="50dp"
        android:layout_height="80dp"
        android:layout_toRightOf="@+id/layout_joystick"
        android:layout_centerVertical="true"
        android:src="@drawable/right"
        />
    <ImageButton
        android:id="@+id/down_action"
        android:layout_width="80dp"
        android:layout_height="50dp"
        android:layout_below="@+id/layout_joystick"
        android:layout_centerHorizontal="true"
        android:src="@drawable/down"
        />
    <RelativeLayout
        android:id="@+id/control_arm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="60dp"
        android:orientation="horizontal"
        >

        <ImageButton
            android:id="@+id/arm_up"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/arm_stop"
            android:src="@drawable/up"
            />

        <ImageButton
            android:id="@+id/arm_stop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:src="@drawable/left"
            />

        <ImageButton
            android:id="@+id/arm_down"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/arm_stop"
            android:src="@drawable/down"
            />

    </RelativeLayout>
    <ImageButton
        android:id="@+id/left_action"
        android:layout_width="50dp"
        android:layout_height="80dp"
        android:layout_toLeftOf="@+id/layout_joystick"
        android:layout_centerVertical="true"
        android:src="@drawable/left"
        />
    <RelativeLayout
        android:id="@+id/layout_joystick"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_centerInParent="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="29dp"
        android:background="@drawable/image_button_bg" >
    </RelativeLayout>
    <LinearLayout
        android:id="@+id/form"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="16dp"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="IP:PORT:"
            android:textSize="18dp"
            />
        <EditText
            android:id="@+id/ip_tv"
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:layout_height="wrap_content" />
        <ImageButton
            android:id="@+id/connect"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/connect"
            />
    </LinearLayout>
    <TextView
        android:id="@+id/state"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="16dp"
        android:textSize="24dp"
        android:layout_marginTop="12dp"
        android:textColor="@android:color/holo_red_light"
        android:text="Disconnected"
        />
</RelativeLayout>